import datetime

def get_current_datetime():
    now = datetime.datetime.now()
    current_date = now.strftime("%Y-%m-%d")
    current_time = now.strftime("%H:%M:%S")
    current_datetime = now.strftime("%Y-%m-%d %H:%M:%S")
    return {
        'date': current_date,
        'time': current_time,
        'datetime': current_datetime
    }
